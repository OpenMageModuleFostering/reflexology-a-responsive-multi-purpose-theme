/**
 * Top menu for store
 *
 * @see Mage_Page_Block_Html_Topmenu
 */
?>
<?php $_menu = $this->getHtml('level-top') ?>
<?php if($_menu): ?>
<div class="nav-container">
    <ul id="nav" class="nav navbar-nav">
        <?php echo $_menu ?>
    </ul>
</div>
<?php endif ?>

<script type="text/javascript">
	var $m	=	jQuery.noConflict();
	$m('.nav .parent').each(function() {
		$m(this).removeAttr('class');
		$m(this).attr('class','dropdown');
		$m(this).children('ul.level0').children('li').removeAttr('class');
		$m(this).children('ul.level0').addClass('dropdown-menu').removeClass('level0');
		$m(this).children('a.level-top').removeAttr('aria-expanded').addClass('dropdown-toggle disabled').attr("data-toggle","dropdown").removeClass('level-top');
		$m(this).children('ul.dropdown-menu').find('ul.level1').remove();
	});
	$m('.nav').removeAttr('id');

	$m(window).resize(function() {
		adjustTopItems();
	});
	function adjustTopItems() {
		if ($m(window).width() < 768) {
			$m('.nav .dropdown').each(function() {
				$m(this).children('a.dropdown-toggle').removeClass('disabled');
			});
			$m(".dropdown").click(function() {
				//$m(this).children('a.dropdown-toggle').addClass('disabled');
			});
		} else {
			$m('.nav .dropdown').each(function() {
				$m(this).children('a.dropdown-toggle').addClass('disabled');
			});
		}
	}
	adjustTopItems();
</script>