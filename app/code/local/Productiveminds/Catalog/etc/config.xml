<?xml version="1.0"?>
<config>
	<modules>
		<Productiveminds_Catalog>
			<version>0.1.4</version>
		</Productiveminds_Catalog>
	</modules>
	<frontend>
		<layout>
            <updates>
                <promindscatalog>
                    <file>productiveminds/catalog.xml</file>
                </promindscatalog>
            </updates>
        </layout>
        <routers>
            <promindscatalog>
                <use>standard</use>
                <args>
                    <module>Productiveminds_Catalog</module>
                    <frontName>shopnow</frontName>
                </args>
            </promindscatalog>
        </routers>
	</frontend>
    <global>
        <helpers>
            <promindscatalog>
                <class>Productiveminds_Catalog_Helper</class>
            </promindscatalog>
        </helpers>
        <blocks>
            <promindscatalog>
                <class>Productiveminds_Catalog_Block</class>
            </promindscatalog>
        	<catalog>
        		<rewrite>
        			<product_new>Productiveminds_Catalog_Block_Product_New</product_new>
        		</rewrite>
            </catalog>
        </blocks>
    </global>
</config>